<div class="row">
  <div class="small-8 columns">
    <!-- primary partial gets displayed here in main div -->
    <%= render partial: "#{primary}" %>
    <!-- sometimes we want another partial below -->
    
  </div>
  <div class="small-4 columns">
    <!-- render the sidebar, if it exists -->
    <%= render partial: "#{sidebar}" unless sidebar.blank? %>
  </div>
</div>

<!-- Add a button for new instances of object -->
<%= link_to(eval("edit_#{model_name}_path(@#{model_name})"), class: "button tiny radius") do %>
  <i class="fa fa-plus"></i>
  &nbsp;Edit this <%= model_name.capitalize %>
<% end %>
<%= link_to "Destroy #{model_name}", eval("#{model_name}_path(@#{model_name})"), data: { confirm: "Are you sure you want to permanently remove this #{model_name} from the system?" }, method: :delete, class: "button tiny radius alert" %>
