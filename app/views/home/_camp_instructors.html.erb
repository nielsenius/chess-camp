<% if @instructors.any? %>

  <div class="panel clearfix">
    <h5>Instructors</h5>
    <ul class="side-nav">
      <% @instructors.each do |instructor| %>
        <li><strong>Name:</strong></li>
				<li><%= instructor.proper_name %></li>
				<% if instructor.picture.blank? %>
					<li>No Picture Available</li>
				<% else %>
					<li><%= image_tag instructor.picture %></li>
				<% end %>
				<li><strong>Bio:</strong></li>
				<li><%= instructor.bio %></li>
				<% if instructor != @instructors.last%>
					<li><br /></li>
				<% end %>
      <% end %>
    </ul>
  </div>
	
<% else %>
	
  <div class="panel clearfix">
    <h5>No Instructors</h5>
  </div>
	
<% end %>