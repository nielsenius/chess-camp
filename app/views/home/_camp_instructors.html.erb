<% if @instructors.any? %>

  <div class="panel clearfix">
    <h5>Instructors</h5>
    <ul class="side-nav">
      <% @instructors.each do |instructor| %>
				<li><%= instructor.picture_url.nil? ? "No Picture Available" : image_tag(instructor.picture_url) %></li>
        <li><strong>Name:</strong>&nbsp;&nbsp;<%= instructor.proper_name %></li>
				<li><strong>Bio:</strong></li>
				<li><%= instructor.bio %></li>
				<% if instructor != @instructors.last%>
					<li><br /></li>
				<% end %>
      <% end %>
    </ul>
  </div>
	
<% else %>
	
  <div class="panel clearfix">
    <h5>No Instructors</h5>
  </div>
	
<% end %>