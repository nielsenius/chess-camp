<% if @my_upcoming_camps.any? %>

  <!-- <h3>&nbsp;</h3> -->
  <div class="panel clearfix">
    <h5>My Upcoming Camps</h5>
    <ul class="side-nav">
      <% @my_upcoming_camps.each do |camp| %>
        <li><%= link_to camp.name, camp_path(camp) %> (<%= camp.start_date.strftime('%m/%d/%y') %>)</li>
      <% end %>
    </ul>
  </div>
	
<% else %>
	
  <div class="panel clearfix">
    <h5>No Upcoming Camps</h5>
  </div>
	
<% end %>
